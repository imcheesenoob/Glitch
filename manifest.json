{
  "manifest_version": 2,
  "name": "Glitch Letters",
  "version": "1.0",
  "description": "Changes the font",
  "permissions": [
    "activeTab",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"],
    "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
